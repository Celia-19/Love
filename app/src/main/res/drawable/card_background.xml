<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Esquinas redondeadas -->
    <corners android:radius="16dp" />

    <!-- Color de fondo de la tarjeta -->
    <solid android:color="@color/cardBackgroundColor" />

    <!-- Borde opcional -->
    <stroke
        android:width="2dp"
        android:color="@color/cardBorderColor" />

    <!-- Sombra opcional (depende del nivel del SDK y el tema de la app) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>